@model reportes
@{
     ViewBag.Title = "Caso Cerrado";
     List<tipo_falla> tipoFalla = ViewBag.tipoFalla;
     List<dptos> departamentos = ViewBag.departamentos;
     List<usuarios> Usuarios =  ViewBag.usuarios;
}

<div id="yo" class="page">

<ol class="breadcrumb">
    <li><a href="~/admin/reportes/Cerrados">Cerrados</a></li>
    <li class="active">"Caso Cerrado"</li>
</ol>

@using (Html.BeginForm())
{

    <div>
        
        <div class="form-group">
            @Html.LabelFor(x => x.idReportes)
            @Html.TextBoxFor(x => x.idReportes, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.reportado_por)
            @Html.TextBoxFor(x => x.reportado_por, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.fecha_inicio)
            @Html.EditorFor(x => x.fecha_inicio, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control", @type = "date", @disabled = "disabled" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.fecha_cierre)
            @Html.EditorFor(x => x.fecha_cierre, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control", @type = "date", @disabled = "disabled" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.problema_presentado)
            @Html.TextAreaFor(x => x.problema_presentado, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.falla)
            @Html.TextAreaFor(x => x.falla, new { @class = "form-control", disabled = "disabled" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.solucion)
            @Html.TextBoxFor(x => x.solucion, new { @class = "form-control", disabled = "disabled" })
            @Html.ValidationMessageFor(x => x.solucion, null, new { @class = "label label-danger" })
        </div>
        <div class="form-group">
            <label>Tipo de falla</label>
            <select name="idUsuario" class="form-control" disabled="disabled">
                @foreach (var p in Usuarios)
                {
                    <option selected value="@p.idUsuario">@p.nombre</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Tipo de falla</label>
            <select name="idDpto" class="form-control" disabled="disabled">
                @foreach (var p in departamentos)
                {
                    <option selected value="@p.idDpto">@p.nombre_dpto</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Tipo de falla</label>
            <select name="idTipoFalla" class="form-control" disabled="disabled">
                @foreach (var p in tipoFalla)
                {
                    <option selected value="@p.idTipoFalla">@p.nombre_falla</option>
                }
            </select>
        </div>


    </div>
    
}
 </div>


 

