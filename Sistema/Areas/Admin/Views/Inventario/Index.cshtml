@{
    ViewBag.Title = "Inventario";
    bool pdf = ViewBag.pdf;
}

<div id="experiencia" class="page">

    <h1 class="page-header remove-margin">
@if (pdf == false)
{
        <a class="btn btn-primary pull-right" href="~/admin/inventario/crud">Agregar</a>
}
        @ViewBag.Title
    </h1>

    <div id="list"></div>
    @if (pdf == false)
    {
        <a href="~/admin/inventario/ExportarPDFinventarios/" target="_blank" class="btn btn-danger">
            <i class="fa fa-file-pdf-o"></i> <span class="hidden-xs hidden-sm">Descargar en PDF</span>
        </a>
    }
</div>

<script>
    $(document).ready(function () {
        var agrid = $("#list").anexGrid({
            columnas: [
               { leyenda: 'Id', columna: 'idInventario', ordenable: true },
               { leyenda: 'Nombre', columna: 'nombre_inventario', ordenable: true, filtro: true },  
               { leyenda: 'cantidad', columna: 'cantidad', ordenable: true, filtro: true },
               { leyenda: 'serial', columna: 'serial', ordenable: true, filtro: true },
               { leyenda: 'ubicacion por', columna: 'ubicacion', ordenable: true, filtro: true },
               { leyenda: 'Usuario', columna: 'nombre', ordenable: true, filtro: true },
               { leyenda: 'Tipo Inventario', columna: 'nombre_tipo', ordenable: true, filtro: true },
               { leyenda: 'Fecha Creación', columna: 'fecha_creacion', ordenable: true },
               { style: 'width:50px' },
            ],
            modelo: [
                {
                    propiedad: 'idInventario', formato: function (tr, obj, valor) {
                        return anexGrid_link({
                            href: '@Url.Content("~/admin/inventario/crud/")' + obj.idInventario,
                            contenido: valor
                        });
                    }
                },
            { propiedad: 'nombre_inventario' },
            { propiedad: 'cantidad' },
            { propiedad: 'serial' },
            { propiedad: 'ubicacion' },
            { propiedad: 'nombre' },
            { propiedad: 'nombre_tipo' },
            { propiedad: 'fecha_creacion', formato: function (tr, obj, valor) { return moment(valor).format("YYYY-MM-DD"); } },
                {
                    formato: function (tr, obj, valor) {
                        return anexGrid_link({
                            href: '@Url.Content("~/admin/inventario/eliminar/")' + obj.idInventario,
                            contenido: '<i class="fa fa-trash"></i>',
                            class: 'btn btn-danger btn-xs btn-block btn-eliminar',
                        });
                    }
                },
                
            ],
            url: '@Url.Content("~/admin/inventario/listar")',
            paginable: true,
            filtrable: true,
            limite: [20, 60, 100],
            columna: 'idInventario',
            columna_orden: 'DESC'
        });

        agrid.tabla().on('click', '.btn-eliminar', function () {
            if (!confirm('¿Está seguro de eliminar este registro?'))
            {
                return;
            }

            $.post($(this).attr('href'), function (r) {
                if (r.response) agrid.refrescar();
            }, 'json')

            return false;
        })
    })
</script>