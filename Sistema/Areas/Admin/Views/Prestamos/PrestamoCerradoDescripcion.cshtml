@model prestamos    
@{
    ViewBag.Title = "Prestamo Cerrado";
    List<usuarios> Usuarios = ViewBag.usuarios;
}

<div id="yo" class="page">

    <ol class="breadcrumb">
        <li><a href="~/admin/prestamos/Cerrados">Cerrados</a></li>
        <li class="active">"Prestamo Cerrado"</li>
    </ol>

    @using (Html.BeginForm())
    {

        <div>

            <div class="form-group">
                @Html.LabelFor(x => x.idPrestamos)
                @Html.TextBoxFor(x => x.idPrestamos, new { @class = "form-control", disabled = "disabled" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Aquien_presta)
                @Html.TextBoxFor(x => x.Aquien_presta, new { @class = "form-control", disabled = "disabled" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.fecha_entrega)
                @Html.EditorFor(x => x.fecha_entrega, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control", @type = "date", @disabled = "disabled" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.fecha_devolucion)
                @Html.EditorFor(x => x.fecha_devolucion, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control", @type = "date", @disabled = "disabled" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.nota)
                @Html.TextAreaFor(x => x.nota, new { @class = "form-control", disabled = "disabled" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.nota_devolucion)
                @Html.TextAreaFor(x => x.nota_devolucion, new { @class = "form-control", disabled = "disabled" })
            </div>
            <div class="form-group">
                <label>Tipo de falla</label>
                <select name="idUsuario" class="form-control" disabled="disabled">
                    @foreach (var p in Usuarios)
                {
                        <option selected value="@p.idUsuario">@p.nombre</option>
                    }
                </select>
            </div>

        </div>

    }
</div>
