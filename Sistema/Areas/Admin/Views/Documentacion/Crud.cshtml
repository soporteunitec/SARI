@model documentacion 
@{
    ViewBag.Title = "Documentos";

}

<div id="yo" class="page">

    <ol class="breadcrumb">
        <li><a href="~/admin/documentacion">Documentación</a></li>
        <li class="active">"Nuevo documento"</li>
    </ol>

    @using (Html.BeginForm("guardar", "documentacion", FormMethod.Post))
    {

        <div>
            @Html.HiddenFor(x => x.idDocumentacion)
            <div class="form-group">
                @Html.Label("¿A quien pertenece la documentación?")
                @Html.TextBoxFor(x => x.nombre_documento, new { @class = "form-control", placeholder = "Ingrese el nombre del documento" })
                @Html.ValidationMessageFor(x => x.nombre_documento, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
               @Html.Label("Descripción general")
                @Html.TextBoxFor(x => x.descripcion, new { @class = "form-control", placeholder = "Ingrese una descripción" })
                @Html.ValidationMessageFor(x => x.descripcion, null, new { @class = "label label-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Fecha de creación")
              
                @if (Model.idDocumentacion > 0)
                {
                    @Html.EditorFor(x => x.fecha_creacion, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                }
                else
                {
                    @Html.EditorFor(x => x.fecha_creacion, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control", @type = "date", @Value = DateTime.Now.ToString("yyyy-MM-dd") } })
                }
                    
              
                @Html.ValidationMessageFor(x => x.fecha_creacion, null, new { @class = "label label-danger" })


            </div>

        </div>

        <div class="text-right well well-sm">
            <button data-ajax="true" class="btn btn-primary">Guardar</button>
        </div>
    }

    @if (Model.idDocumentacion > 0)
    {
        <div role="tabpanel" class="tab-pane" id="adjuntos"></div>
    }

        <script>
            $(document).ready(function () {
                
                @if (Model.idDocumentacion > 0)
             {
                <text>
                CargarAdjuntos();
                </text>
             }
            })

            function CargarAdjuntos() {
                $("#adjuntos").load('@Url.Content("~/admin/documentacion/adjuntos/" + Model.idDocumentacion)');
            }
        </script>
  
</div>
